<main class='container'>
  <section class='row'>
    <div class="col-md-12">
      <div class="new-game">
      <%= link_to 'Start new game', new_game_path, class: 'btn btn-default btn-lg' %>
      </div>
    </div>
  </section>

  <% if current_user %>

  <section class='row'>
    <h1> GAMES IN PROGRESS </h1>
    <div class='games'>
      <% current_user.games.where(winner_id: nil).where(is_draw: nil).each do |game| %>
        <p><%= link_to "#{User.find(game.player1_id).name} vs #{User.find(game.player2_id).name}", game %> last move: <%= "#{game.updated_at}" %></p>
      <% end %>
    </div>
  </section>

  <section class='row'>
  <h1> FINISHED GAMES</h1>
    <div class='games'>
      <% current_user.games.where("winner_id IS NOT NULL or is_draw IS TRUE").each do |game| %>
        <p><%= link_to "#{User.find(game.player1_id).name} vs #{User.find(game.player2_id).name}", game %> finshed: <%= "#{game.updated_at}" %></p>
      <% end %>
    </div>
  </section>

  <% end %>
</main>

